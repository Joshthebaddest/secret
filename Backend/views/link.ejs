<%- include("template/header") -%>

<%- include("template/logo") -%>
    <div class="alert">Text copied the to clipboard</div>


    <div class="form" action="" method="post">
        <div class="head">
            <h3>Your Message</h3>
        </div>
        
        <div class="mb-3 info-container">

            <% if(message.length <= 0){ %>
                <p>no feedbacks from your friends yet</p>
           <% }else{ %>
            <% message.forEach((text)=>{ %>
                <div style="height: fit-content; border: 1px solid rgb(196, 196, 196);margin-bottom: 5px; padding-left: 5px; position: relative;">
                    <p style="margin: 0;"><strong>Message:</strong></p>
                    <p><%= text.message %></p>
                    <p>- Anonymous [<%= text.date %>]</p>
                    <div style="position: absolute; top: 0; right: 0;"><form action="/delete" method="post"><input style="background-color: transparent; border: none; color: red; font-size: 20px;" type="submit" name="delete" onChange="this.form.submit()" value="x"><input type="text" hidden name="message" value=<%= text.message %>></form></div>
                </div>
            <% }) }%>
        </div>
    </div>


    <div class="page-container">
        <div class="head">
            <h3>Create Your Secret Message</h3>
        </div>
        
        <div class="mb-3 info-container">
            <p>your link has been generated Successfully</p>
            <p  style="font-size: 12px;"><i>Now share your link with your friends</i></p>

            <input type="text" class="textArea" value= <%= link %>>

            <button style="background-image: linear-gradient(to right, rgb(0, 90, 0), rgb(124, 255, 124));" class="btn btn-primary"><i class="fa-brands fa-whatsapp" style="margin-right: 5px;"></i><a href=<%= whatsapp %>>share on Whatsapp</a></button>
            <button onclick="copyText()" style="background-image: linear-gradient(to right, rgb(176, 255, 112), rgb(127, 253, 127))"; class="btn btn-primary"><i class="fa-solid fa-copy" style="margin-right: 5px;"></i> copy your link</button>
            <button style="background-image: linear-gradient(to right, rgb(186, 0, 34), rgb(0, 42, 253));" class="btn btn-primary"><i class="fa-solid fa-share-nodes" style="margin-right: 5px;"></i> More To Share</button>
        </div>
    </div>

    <script>
        setInterval(()=>{
            document.location.reload();
        }, 30000)
    </script>

    
<%- include("template/footer") -%>